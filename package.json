{
	"name": "micron",
	"private": true,
	"description": "Utility for creating microservices on node.js",
	"version": "0.0.2",
	"author": "Mikhail Kudryashev <uamedwed@gmail.com> (https://uamedwed.com)",
	"main": "dist/main.js",
	"homepage": "https://github.com/uamedwed/micron",
	"bugs": "https://github.com/uamedwed/micron/issues",
	"repository": "git::uamedwed/micron.git",
	"scripts": {
		"start": "npm run build && NODE_ENV=prod node dist/index.jss",
		"dev": "nodemon --exec \"npm run build && NODE_ENV=dev babel-node src/main.js\"",
		"build": "rm -rf dist && babel ./src/ -d ./dist/",
		"test": "nodemon --exec \"npm run build && NODE_ENV=test mocha --timeout 10000 -s 0\""
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.7",
		"@babel/node": "^7.8.7",
		"@babel/plugin-transform-runtime": "^7.8.3",
		"@babel/polyfill": "^7.8.7",
		"@babel/preset-env": "^7.8.7",
		"mocha": "^6.2.2",
		"body-parser": "^1.19.0",
		"dotenv": "^8.1.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.6.11",
		"nodemon": "^1.19.2",
		"husky": "^3.0.4",
		"lint-staged": "^9.2.5",
		"prettier": "^1.18.2"
	},
	"engines": {
		"node": ">= 6.0.0",
		"npm": ">= 3.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js, jsx}": [
			"prettier --write",
			"git add"
		],
		"*.json": [
			"prettier --write",
			"git add"
		]
	},
	"keywords": [
		"api",
		"server",
		"microservice",
		"service",
		"application",
		"node.js",
		"mongoose",
		"express"
	]
}
